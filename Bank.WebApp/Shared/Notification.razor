@if (Action == "success")
{
    <div class="toast align-items-center text-bg-success border-0 fade show"
         role="alert"
         aria-live="assertive"
         data-bs-delay="3000" data-bs-autohide="true"
         aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">@Message</div>
            <button type="button"
                    class="btn-close btn btn-close-white me-2 m-auto"
                    data-bs-dismiss="toast"
                @onclick="Dismiss"
                    aria-label="Close"></button>
        </div>
    </div>
}
else if (Action == "error")
{
    <div class="toast align-items-center text-bg-error border-0 fade show"
         role="alert"
         aria-live="assertive"
         aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">@Message</div>
            <button type="button"
                    class="btn-close btn btn-close-white me-2 m-auto"
                    data-bs-dismiss="toast"
                    aria-label="Close"></button>
        </div>
    </div>
}
@code {
    [Parameter]
    public string? Action { get; set; } = "";

    [Parameter]
    public string? Message { get; set; }

    public void Dismiss()
    {
        Action = "";
    }
}


<style>
    .text-bg-error {
        background-color: darkred;
        color: white;
        width: 100%;
    }

    .text-bg-success {
        background-color: #198754;
        color: white;
        width: 100%;
    }
</style>

