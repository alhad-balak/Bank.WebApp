@inherits LayoutComponentBase
@inject SessionState state
<PageTitle>Bank.WebApp</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        @if (state != null)
        {

            <div class="top-row px-4">
                Welcome! Mr. @state.UserName?.ToUpper()

            </div>
        }
        <article class="content px-4">
            @Body
        </article>


    </main>
</div>
